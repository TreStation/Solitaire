<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="False">
    <Style src="../Styles/LoginScreen.uss" />
    <ui:VisualElement name="verify-code-screen" class="login-screen">
        <ui:Button name="back-btn" text="â†" class="back-button" />
        
        <ui:Label text="Confirm Your Phone Number" class="instruction-text" style="font-size: 24px; margin-bottom: 5px;" />
        <ui:Label text="Enter the code sent to +1 777-444-0000" class="subtitle-text">
            <!-- We can't easily inline color styles in a single label text in UXML without rich text, 
                 so for now we assume the whole text is grey or we split it. 
