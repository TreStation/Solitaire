                <ui:TextField name="otp-1" class="otp-input" max-length="1" />
                <ui:TextField name="otp-2" class="otp-input" max-length="1" />
                <ui:TextField name="otp-3" class="otp-input" max-length="1" />
                <ui:TextField name="otp-4" class="otp-input" max-length="1" />
            </ui:VisualElement>
            
            <ui:Button name="next-btn" text="Next" class="sign-in-button" style="width: 200px; height: 50px; font-size: 20px;" />
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
